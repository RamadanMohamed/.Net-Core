@model IEnumerable<Student>
@{
    ViewBag.Title = "Student list";
}

@Html.ActionLink("Create","Create",new {Href="/Student/Create"},new { @class="btn btn-primary"})
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Age
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.id
            </td>
            <td>
                @item.name
            </td>
            <td>
                @item.Age
            </td>

            <td>
                @Html.ActionLink("Update", "Update", new {id=item.id}, new { @class = "btn btn-warning" })|
                @Html.ActionLink("Details", "ShowStudentData", new { id = item.id }, new { @class = "btn btn-info" })|
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
